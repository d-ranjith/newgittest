import os

credentials_file = '/path/to/credentials.txt'

# Check if the credentials file exists
if not os.path.isfile(credentials_file):
    print("Error: Credentials file not found.")
    print("Please make sure the credentials file is present at the specified location.")
    exit(1)

# Check if the client ID and secret ID are present in the credentials file
with open(credentials_file, 'r') as file:
    lines = file.readlines()
    client_id = None
    client_secret = None
    for line in lines:
        if line.startswith('client_id='):
            client_id = line.split('=')[1].strip()
        elif line.startswith('client_secret='):
            client_secret = line.split('=')[1].strip()

if client_id is None or client_secret is None:
    print("Error: Invalid format in credentials file.")
    print("Please make sure the credentials file contains the client ID and secret ID.")
    exit(1)

# Populate the artifact_config dictionary after validation
artifact_config = {
    "base_url": os.getenv("BASE_URL", "default_value"),
    "use_cert": os.getenv("USE_CERT", "false"),
    "credentials_file": credentials_file
}

# Proceed with the program logic using artifact_config
# ...
