class CertAPIUploader(APIUploader):
    def upload_file(self, file_path):
        self.logger.info("Uploading file to API with certificate authentication...")
        # Upload implementation with certificate authentication
        # Use self.username and self.password for authentication
        with open(file_path, "rb") as file:
            response = requests.post(upload_url, data=file, verify=self.cert_path, auth=(self.username, self.password))
            if response.status_code == 200:
                self.logger.info("File uploaded successfully.")
            else:
                self.logger.error("Failed to upload the file.")

class NonCertAPIUploader(APIUploader):
    def upload_file(self, file_path):
        self.logger.info("Uploading file to API without certificate authentication...")
        # Upload implementation without certificate authentication
        # Use self.username and self.password for authentication
        with open(file_path, "rb") as file:
            response = requests.post(upload_url, data=file, auth=(self.username, self.password))
            if response.status_code == 200:
                self.logger.info("File uploaded successfully.")
            else:
                self.logger.error("Failed to upload the file.")
