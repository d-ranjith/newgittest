private String getEnvVariable(String name, String defaultValue) {
    String value = System.getenv(name);
    return value != null ? value : defaultValue;
}

// Usage example:
String envVar1 = getEnvVariable("ENV_VAR_1", "default_value_for_ENV_VAR_1");
String envVar2 = getEnvVariable("ENV_VAR_2", "default_value_for_ENV_VAR_2");
String envVar3 = getEnvVariable("ENV_VAR_3", "default_value_for_ENV_VAR_3");
