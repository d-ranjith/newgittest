import java.net.URI;
import java.net.URISyntaxException;

public class ArtifactUrlConstructor {

    public static void main(String[] args) {
        String baseUrl = "https://example.com/artifacts/";
        String artifactId = "my-artifact";
        String version = "1.0.0";

        try {
            URI artifactUrl = constructArtifactUrl(baseUrl, artifactId, version);
            System.out.println("Artifact URL: " + artifactUrl.toString());
        } catch (URISyntaxException e) {
            System.err.println("Error constructing artifact URL: " + e.getMessage());
        }
    }

    private static URI constructArtifactUrl(String baseUrl, String artifactId, String version) throws URISyntaxException {
        String artifactPath = String.format("%s/%s/%s.jar", artifactId, version, artifactId);
        return new URI(baseUrl + artifactPath);
    }
}
