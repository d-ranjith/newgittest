import io.smallrye.config.ConfigDefault;
import io.smallrye.config.ConfigMapping;
import lombok.Getter;
import lombok.NoArgsConstructor;
import javax.inject.Singleton;

@Getter
@NoArgsConstructor
@Singleton
@ConfigMapping(prefix = "app")
public interface AppConfiguration {

    @ConfigDefault("default-api-endpoint")
    String apiEndpoint();

    @ConfigDefault("default-artifactory-username")
    String artifactoryUsername();

    @ConfigDefault("default-artifactory-apikey")
    String artifactoryApiKey();

    @ConfigDefault("default-artifactory-certificate-path")
    String artifactoryCertificatePath();

    @ConfigDefault("default-oauth-client-id")
    String oauthClientId();

    @ConfigDefault("default-oauth-client-secret")
    String oauthClientSecret();
}


implementation 'io.smallrye:smallrye-config:2.0.0'
implementation 'io.smallrye:smallrye-config-common:2.0.0'
implementation 'org.eclipse.microprofile.config:microprofile-config-api:2.0'
annotationProcessor 'org.projectlombok:lombok:1.18.20'
