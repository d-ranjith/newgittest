# Find the latest .json file and assign its path to a variable
latest_json_file=$(find /path/to/search -name "*.json" -type f -exec ls -t {} + | head -n 1)

# Check if a .json file was found
if [ -n "$latest_json_file" ]; then
    echo "Latest JSON file is: $latest_json_file"

    # Now you can use $latest_json_file as needed in your script
    # For example, to read its contents:
    json_contents=$(cat "$latest_json_file")

    # Or perform other operations with it
else
    echo "No .json files found in the specified directory."
fi
