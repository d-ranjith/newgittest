public class FileUtil {
    public static String getFileExtension(String filePath) {
        if (filePath == null) {
            return null;
        }

        int lastDotIndex = filePath.lastIndexOf(".");
        if (lastDotIndex == -1 || lastDotIndex == filePath.length() - 1) {
            return "";
        }

        String extension = filePath.substring(lastDotIndex + 1);
        int lastSeparatorIndex = extension.lastIndexOf("/");
        if (lastSeparatorIndex != -1 && lastSeparatorIndex < extension.length() - 1) {
            return extension.substring(lastSeparatorIndex + 1);
        }

        return extension;
    }

    public static void main(String[] args) {
        String filePath = "/path/to/abd.tar.gz";
        String extension = getFileExtension(filePath);
        System.out.println("File extension: " + extension);
    }
}
