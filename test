import org.apache.commons.io.FilenameUtils;

public class FileExtensionExtractor {

    public static String getFileExtension(String filePath) {
        if (filePath == null) {
            throw new IllegalArgumentException("File path cannot be null.");
        }

        String baseName = FilenameUtils.getBaseName(filePath);
        String extension = FilenameUtils.getExtension(filePath);

        int lastDotIndex = baseName.lastIndexOf('.');
        if (lastDotIndex >= 0 && lastDotIndex < baseName.length() - 1) {
            return baseName.substring(lastDotIndex + 1) + "." + extension;
        }

        return ""; // If there's no valid extension, return an empty string.
    }

    public static void main(String[] args) {
        String filePath1 = "path/to/abc.tar.gz";
        String filePath2 = "another/abc.zip";
        String filePath3 = "no_extension_file";
        String filePath4 = "file.with.multiple.dots.";

        System.out.println(getFileExtension(filePath1)); // Output: tar.gz
        System.out.println(getFileExtension(filePath2)); // Output: zip
        System.out.println(getFileExtension(filePath3)); // Output: (Empty String)
        System.out.println(getFileExtension(filePath4)); // Output: (Empty String)
    }
}
