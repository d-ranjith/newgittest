import java.io.File;

public class FileExtensionExtractor {

    public static String getFileExtension(String filePath) {
        if (filePath == null) {
            throw new IllegalArgumentException("File path cannot be null.");
        }

        int lastSeparatorIndex = Math.max(filePath.lastIndexOf(File.separatorChar), filePath.lastIndexOf('/'));
        int lastExtensionIndex = filePath.lastIndexOf('.');

        // Check if the last dot is after the last separator character.
        if (lastExtensionIndex > lastSeparatorIndex) {
            return filePath.substring(lastExtensionIndex + 1);
        }

        return ""; // If there's no valid extension, return an empty string.
    }

    public static void main(String[] args) {
        String filePath1 = "path/to/abc.tar.gz";
        String filePath2 = "another/abc.zip";
        String filePath3 = "no_extension_file";
        String filePath4 = "file.with.multiple.dots.";

        // Find the file name by removing the directory part of the path
        String fileName1 = filePath1.substring(Math.max(filePath1.lastIndexOf(File.separatorChar), filePath1.lastIndexOf('/')) + 1);
        String fileName2 = filePath2.substring(Math.max(filePath2.lastIndexOf(File.separatorChar), filePath2.lastIndexOf('/')) + 1);
        String fileName3 = filePath3.substring(Math.max(filePath3.lastIndexOf(File.separatorChar), filePath3.lastIndexOf('/')) + 1);
        String fileName4 = filePath4.substring(Math.max(filePath4.lastIndexOf(File.separatorChar), filePath4.lastIndexOf('/')) + 1);

        System.out.println(getFileExtension(fileName1)); // Output: tar.gz
        System.out.println(getFileExtension(fileName2)); // Output: zip
        System.out.println(getFileExtension(fileName3)); // Output: (Empty String)
        System.out.println(getFileExtension(fileName4)); // Output: (Empty String)
    }
}
