import lombok.Data;
import lombok.NoArgsConstructor;

import javax.enterprise.context.ApplicationScoped;

@Data
@NoArgsConstructor
@ApplicationScoped
public class AppConfiguration {

    private String apiEndpoint;
    private String artifactoryUsername;
    // Add other configuration fields

    public AppConfiguration(String apiEndpoint, String artifactoryUsername, /* Add other fields */) {
        this.apiEndpoint = apiEndpoint != null ? apiEndpoint : "default_api_endpoint";
        this.artifactoryUsername = artifactoryUsername != null ? artifactoryUsername : "default_artifactory_username";
        // Initialize other configuration fields with default values
    }

    public static AppConfiguration fromEnvVariables() {
        String apiEndpoint = System.getenv().getOrDefault("APP_API_ENDPOINT", null);
        String artifactoryUsername = System.getenv().getOrDefault("APP_ARTIFACTORY_USERNAME", null);
        // Get other environment variables with default values

        return new AppConfiguration(apiEndpoint, artifactoryUsername, /* Other fields */);
    }

    // Add other methods and getters/setters as needed
}
